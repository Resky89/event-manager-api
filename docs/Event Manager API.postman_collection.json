  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Ensure JSON headers",
          "pm.request.headers.upsert({ key: 'Accept', value: 'application/json' });",
          "pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });",
          "// Add Authorization header if token exists in environment",
          "const at = pm.environment.get('access_token');",
          "if (at) { pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + at }); }"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{name}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"role\": \"user\",\n  \"is_active\": true\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Login should return 200', function () { pm.response.to.have.status(200); });",
                  "let json = {}; try { json = pm.response.json(); } catch(e) { json = {}; }",
                  "const data = json && json.data ? json.data : json;",
                  "if (data && data.access_token) pm.environment.set('access_token', data.access_token);",
                  "if (data && data.refresh_token) pm.environment.set('refresh_token', data.refresh_token);",
                  "if (data && data.expires_in) pm.environment.set('expires_in', String(data.expires_in));"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "X-Refresh-Token", "value": "{{refresh_token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            },
            "body": { "mode": "raw", "raw": "{}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Refresh should return 200', function () { pm.response.to.have.status(200); });",
                  "let json = {}; try { json = pm.response.json(); } catch(e) { json = {}; }",
                  "const data = json && json.data ? json.data : json;",
                  "if (data && data.access_token) pm.environment.set('access_token', data.access_token);",
                  "if (data && data.refresh_token) pm.environment.set('refresh_token', data.refresh_token);",
                  "if (data && data.expires_in) pm.environment.set('expires_in', String(data.expires_in));"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "X-Refresh-Token", "value": "{{refresh_token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            },
            "body": { "mode": "raw", "raw": "{}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Logout should return 200', function () { pm.response.to.have.status(200); });",
                  "pm.environment.unset('access_token');",
                  "pm.environment.unset('refresh_token');",
                  "pm.environment.unset('expires_in');"
                ]
              }
            }
          ]
        }
      ]
